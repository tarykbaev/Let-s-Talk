<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="@dimen/padding_16dp"
    tools:context=".ui.sign_up.VerifyMailFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_email"
        android:layout_width="@dimen/view_100dp"
        android:layout_height="@dimen/view_100dp"
        android:layout_marginTop="@dimen/padding_100dp"
        android:background="@drawable/rounded_corner_input"
        android:padding="@dimen/padding_8dp"
        android:src="@drawable/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_64dp"
        android:text="Check your mail"
        android:textColor="@color/text"
        android:textSize="31sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_email" />

    <TextView
        android:id="@+id/tv_description"
        style="@style/text_subtitle"
        android:layout_marginTop="@dimen/padding_8dp"
        android:text="We have sent verification link to your email."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <Button
        android:id="@+id/btn_open_app"
        style="@style/TransparentButton"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/padding_64dp"
        android:text="Open email app"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description" />

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8dp"
        android:layout_marginBottom="@dimen/padding_16dp"
        android:text="Skip, I'll confirm later"
        android:textColor="@color/text_subtitle"
        android:textSize="@dimen/text_18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>